/* This program draws a big tower from Karel's starting spot */
function start(){
    turnNorth();
    buildTower();
    
    
    while(notFacingNorth()){
        turnLeft();
    }
}

function turnNorth(){
    while(notFacingNorth()){
        turnLeft();
    }
}


function buildTower(){
    while(frontIsClear()){
        putBall();
        move();
    }
    putBall();    

    
}
